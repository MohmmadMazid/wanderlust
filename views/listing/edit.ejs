<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-4">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>

            <form action="/listing/<%= listing._id  %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-4">    
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" value="<%= listing.title  %>" class="form-control" required>
            </div>
                
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control" required><%= listing.description  %></textarea>
                    <div class="invalid-feedback">
                        Please enter a message in the textarea.
                      </div>
                </div>
                
                <div>
                    Orignal Listng image <br>
                    <img src="<%= originalImageUrl%>" alt="orignal listing" height="300px" width="250px" >
                </div>
               
                <div class="mb-4">
                    <label for="img-url" class="form-label">Upload New Listing Image</label>
                    <input type="file" name="listing[image]"  class="form-control">
                </div>
               
                <div class="row">
                    <div class="mb-4 col-md-4">
                        <label for="enter-price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" id="enter-price" value="<%= listing.price  %>" class="form-control" required>
                        <div class="invalid-feedback">
                            price should be valid
                          </div>
                    </div>
                   
                    <div class="mb-4 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" id="location" value="<%= listing.location  %>" class="form-control" required>
                        <div class="invalid-feedback">
                            location should be valid
                          </div>
                    </div>
                </div>
               
                <div class="mb-4">
                    <label for="location" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="country" value="<%= listing.country  %>" class="form-control" required>
                    <div class="invalid-feedback">
                        country should be valid
                        </div>
                </div>
                
                <button class="btn  btn-dark edit-btn mb-2">Add</button>
            </form>
        </div>
    </div>
    
</body>
</html>